{
  "name": "rag-demo-server",
  "version": "1.0.0",
  "description": "Lightweight TypeScript Node server for RAG demo",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "chroma:start": "npx chromadb run --path ./chroma_db --port 8000",
    "chroma:stop": "pkill -f 'chromadb run'",
    "dev:full": "npm run chroma:start & sleep 3 && npm run dev",
    "postinstall": "mkdir -p chroma_db"
  },
  "keywords": [
    "rag",
    "llm",
    "vector-search",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@langchain/openai": "^0.0.14",
    "axios": "^1.6.2",
    "chromadb": "^3.0.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "langchain": "^0.0.208",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.4",
    "@types/uuid": "^9.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
